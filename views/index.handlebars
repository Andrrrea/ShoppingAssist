<div class="dropdownMenus col-md-12 mb-3">
  <div class='form-field'>
    <label for='product'></label>
    <select id='product' class='form-control mb-3'>
      <option>Wähle deine Produkte</option>
      {{#each products}}
      <option id="chosen_product">{{this.name}}</option>
      {{/each}}
    </select>
    <button onclick="addToList()" type="button" class="btn btn-primary" name="add" value="Add">Hinzufügen</button>
  </div>

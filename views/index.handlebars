<h1 class="text-center mb-3">{{title}}</h1>

<form action="/api/products" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="x">X-Koordinate</label>
        <input type="number" name="x" class="form-control">
    </div>
    <div class="form-group">
        <label for="x">Y-Koordinate</label>
        <input type="number" name="y" class="form-control">
    </div>
    <input type="submit" value="Add Product" class="btn btn-primary btn-block">
</form>

<h4>Products</h4>
<ul>
    {{#each products}}
    <li class="list-group-item">{{this.name}}: {{this.x}}, {{this.y}}</li>
    {{/each}}
</ul>
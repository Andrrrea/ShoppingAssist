<script>
  var shoppinglist = [];
  
  function addToList() {
    var e = document.getElementById("product");
	  var result = e.options[e.selectedIndex].value; 
	  shoppinglist.push(result);
    console.log(shoppinglist);
    document.getElementById("list").innerHTML = shoppinglist;
  } 
</script>

